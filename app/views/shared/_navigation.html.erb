<div class='container-fluid'>
  <!-- link to home page -->
  <div class='navbar-header'>
    <%= link_to 'Home', root_path, class: 'navbar-brand' %>
  </div>
  <div class='collapse navbar-collapse'>
    <!-- links to job-search features -->
    <ul class='nav navbar-nav nav-pills'>
      <% dropdown_opts = {
        class: 'dropdown-toggle', data: { toggle: 'dropdown' }, role: 'button'
      } %>

      <li><%= link_to('Companies', companies_path) %></li>
      <li><%= link_to('My Contacts', contacts_path) %></li>
      <li><%= link_to('My Notes', notes_path) %></li>
      <li class='dropdown'>
        <%= link_to('My Job Applications', '#', dropdown_opts) %>
        <ul class='dropdown-menu'>
          <li><%= link_to('My Applications', job_applications_path) %></li>
          <li><%= link_to('My Cover Letters', cover_letters_path) %></li>
          <li><%= link_to('My Postings', postings_path) %></li>
        </ul>
      </li>
    </ul>
    <!-- links to account management -->
    <ul class='nav navbar-nav navbar-right nav-pills'>
      <% if !logged_in? %>
        <li class='dropdown'>
          <%= link_to('Login', '#', dropdown_opts) %>
          <ul class='dropdown-menu'>
            <li><%= link_to 'Via GitHub',  '/auth/github' %></li>
            <li><%= link_to 'Via Google',  '/auth/google' %></li>
            <li><%= link_to 'Via Twitter', '/auth/twitter' %></li>
            <li role='separator' class='divider'></li>
            <li class='dropdown-header'>Don't use those services?</li>
            <li><%= link_to 'Register', '/register' %></li>
            <li><%= link_to 'Login', login_path %></li>
          </ul>
        </li>
      <% else %>
        <li class='dropdown'>
          <%= link_to('Account', '#', dropdown_opts) %>
          <ul class='dropdown-menu'>
            <% logout_opts = { method: 'delete', class: 'last_a' }%>
            <li><%= link_to('Profile', user_path) %></li>
            <li><%= link_to('Log out', logout_path, logout_opts) %></li>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
</div>
