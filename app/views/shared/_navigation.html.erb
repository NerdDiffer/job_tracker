<div class='container-fluid'>
  <!-- link to home page -->
  <div class='navbar-header'>
    <%= button_tag(type: 'button', class:'navbar-toggle collapsed') do %>
    <% end %>
    <%= link_to 'Home', root_path, class: 'navbar-brand' %>
  </div>
  <div class='collapse navbar-collapse'>
    <!-- links to job-search features -->
    <ul class='nav navbar-nav nav-pills'>
      <% main_links.each do |link| %>
        <li role='presentation'><%= link_to link[:name], link[:path] %></li>
      <% end %>
    </ul>
     <!-- links to account management -->
    <ul class='nav navbar-nav navbar-right nav-pills'>
      <% unless logged_in? %>
        <li role='presentation'><%= link_to 'Login', login_path %></li>
      <% else %>
        <li class='dropdown'>
          <%= link_to('Account', '#',
                      class: 'dropdown-toggle',
                      data: { toggle: 'dropdown' },
                      role: 'button'
          ) %>
          <ul class="dropdown-menu">
            <li><%= link_to("Profile", current_user) %></li>
            <li><%= link_to("Log out", logout_path, method: "delete", class: 'last_a') %></li>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
</div>
