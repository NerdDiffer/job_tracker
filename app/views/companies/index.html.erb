<% @page_title = 'Companies' %>

<p id="notice"><%= notice %></p>

<h1>Listing Companies</h1>

<%= link_to 'New company', new_company_path %>

<%= form_tag companies_path, method: 'get' do %>
  <!-- these 2 hidden fields help you sort/search w/ multiple criteria -->
  <%= hidden_field_tag(:direction, params[:direction]) %>
  <%= hidden_field_tag(:sort, params[:sort]) %>

  <%= content_tag :p do %>
    <%= search_field_tag :search, params[:search] %>
    <%= submit_tag('Search', :name => nil) %>
  <% end %>
<% end %>

<div id='companies'>
  <table class='table table-striped table-hover'>
    <thead>
      <tr>
        <th><%= generate_sortable_link('name', 'Name') %></th>
        <th>Website</th>
        <th><%= generate_sortable_link('category', 'Category') %></th>
      </tr>
    </thead>

    <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td><%= link_to company.name, company %></td>
          <td>
            <%= link_to(
              company.website,
              interpolate_link(company.website),
              target: '_blank'
            ) %>
          </td>
          <td><%= company.category %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
