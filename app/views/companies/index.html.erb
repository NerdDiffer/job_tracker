<% @page_title = 'Companies' %>

<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<%= content_tag :p do %>
  <%= link_to 'New company', new_company_path %>
  <br/>
  <%= link_to 'Browse company categories', categories_path %>
<% end %>

<%= render 'search_filter' %>

<div id='companies'>
  <table class='table table-striped table-hover'>
    <thead>
      <tr>
        <th><%= generate_sortable_link('companies.name', title: 'Name') %></th>
        <th>Website</th>
        <th>Categories</th>
      </tr>
    </thead>

    <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td><%= link_to company.name, company %></td>
          <td>
            <%= link_to(
              company.website,
              interpolate_link(company.website),
              target: '_blank'
            ) %>
          </td>
          <td><%= display_names(company.category_names) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
