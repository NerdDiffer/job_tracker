<% @page_title = @company.name %>

<p id="notice"><%= notice %></p>

<h1><%= @company.name %></h1>

<p>
  <%= link_to 'Back', companies_path %>
</p>

<p>
  <strong>Website:</strong>
  <% website = @company.website %>
  <%= link_to(
    website,
    interpolate_link(website),
    target: '_blank'
  ) %>
</p>

<p>
  <h2>Categories</h2>
  <% categories = @company.categories %>
  <% categories.each do |category| %>
    <li><%= link_to(category.display_name, category_path(category)) %></li>
  <% end %>
</p>

<% if logged_in? %>
  <% locals = { company: @company,
                contacts: @contacts,
                job_applications: @job_applications } %>
  <%= render(partial: 'user_attached_records', locals: locals) %>
<% end %>
