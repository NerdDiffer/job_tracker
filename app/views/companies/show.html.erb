<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>

<p>
  <strong>Website:</strong>
  <%= link_to(
    @company.website,
    interpolate_link(@company.website),
    target: '_blank'
  ) %>
</p>

<p>
  <strong>Category:</strong>
  <%= @company.category %>
</p>

<%= link_to 'Edit', edit_company_path(@company) %> |
<%= link_to 'Back', companies_path %> |
<%= link_to(
  'Add Contact',
  new_contact_path({ company_id: @company.id })
) %> |
<%= link_to(
  'Add Job Application',
  new_job_application_path({ company_id: @company.id })
) %>

<div class='attached_records'>
  <h2>Contacts</h2>
  <% @company.contacts.each do |contact| %>
    <li><%= link_to contact.name, contact %></li>
  <% end %>
</div>

<div class='attached_records'>
  <h2>Job Applications</h2>
  <% @company.job_applications.each do |ja| %>
    <li><%= link_to ja.title, ja %></li>
  <% end %>
</div>
