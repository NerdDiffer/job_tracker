<% @page_title = @company.name %>

<p id="notice"><%= notice %></p>

<h1><%= @company.name %></h1>

<p>
  <%= link_to 'Back', companies_path %>
</p>

<p>
  <strong>Website:</strong>
  <% website = @company.website %>
  <%= link_to(
    website,
    interpolate_link(website),
    target: '_blank'
  ) %>
</p>

<p>
  <h2>Categories</h2>
  <% categories = @company.categories %>
  <% categories.each do |category| %>
    <li><%= link_to(category.display_name, category_path(category)) %></li>
  <% end %>
</p>

<div class='attached_records'>
  <h2>Contacts</h2>
  <%= link_to(
    'Add Contact',
    new_contact_path({ company_id: @company.id })
  ) %>
  <% @contacts.each do |contact| %>
    <li><%= link_to contact.name, contact %></li>
  <% end %>
</div>

<div class='attached_records'>
  <h2>Job Applications</h2>
  <%= link_to(
    'Add Job Application',
    new_job_application_path({ company_id: @company.id })
  ) %>
  <% @job_applications.each do |job_application| %>
    <li><%= link_to job_application.title, job_application %></li>
  <% end %>
</div>
