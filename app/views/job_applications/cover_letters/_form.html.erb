<%= form_for @cover_letter, url: job_application_cover_letter_path do |f| %>

  <%= error_messages_for @cover_letter %>

  <div class="field">
    <%= f.label :sent_date %><br>
    <%= f.date_field :sent_date %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, :size => '80x30', :class => 'md_edit' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
