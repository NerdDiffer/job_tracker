<%= form_for(@job_application) do |f| %>

  <%= error_messages_for @job_application %>

  <div class="field">
    <%= label_tag :company_name %><br>
    <% company_name = @job_application.company.try(:name)  %>
    <%= text_field_tag(:company_name, company_name) %>
  </div>

  <div class="field">
    <% opts = options_for_select(
      [["Yes", true], ["No", false]],
      :selected => @job_application.active
    ) %>
    <%= f.label :active %><br>
    <%= f.select(:active, opts, :include_blank => true) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
