<% @page_title = "Job Applications" %>

<h1>Job Applications</h1>

<p>
  <%= link_to new_job_application_path, class: 'add_new_member' do %>
    <i class='fa fa-plus'><span>New Job Application</span></i>
  <% end %>
</p>

<table class='table table-striped table-hover job_applications index'>
  <thead>
    <tr>
      <th class='active_application'><%= render partial: 'filter_active' %></th>
      <th><%= generate_sortable_link('title', title: 'Company & Job Title') %></th>
      <th><%= generate_sortable_link('updated_at', title: 'Updated') %></th>
      <th class='actions'>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @job_applications.each do |job_application| %>
      <tr>
        <td class='active_application'>
          <%= status_tag job_application.active %>
        </td>
        <td><%= link_to job_application.title, job_application %></td>
        <td><%= job_application.updated_at.to_s('month date year') %></td>
        <td>
          <%= link_to 'Edit', edit_job_application_path(job_application) %><br />
          <%= link_to 'Delete', job_application, delete_link_opts %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
