<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Posting Date</th>
      <th>Job Title</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% attached = job_application.posting %>
    <% default_link_dest = job_application_posting_path(job_application) %>
    <% edit_link_dest = edit_job_application_posting_path(job_application) %>
    <tr>
      <td><%= attached.posting_date.to_s('month date year') %></td>
      <td><%= link_to(attached.job_title, default_link_dest) %></td>
      <td><%= link_to 'Edit', edit_link_dest %></td>
      <td><%= link_to 'Delete', default_link_dest, delete_link_opts %></td>
    </tr>
  </tbody>
</table>
