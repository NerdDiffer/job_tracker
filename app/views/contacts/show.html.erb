<% @page_title = "#{@contact.name}" %>

<p id="notice"><%= notice %></p>

<h1><%= @contact.name %></h1>

<p>
  <strong>Title:</strong>
  <%= @contact.title %>
</p>

<p>
  <strong>Company:</strong>
  <%= link_to(@contact.company.name, @contact.company) if @contact.company.present? %>
</p>

<p>
  <strong>Office Phone:</strong>
  <%= @contact.phone_office %>
</p>

<p>
  <strong>Mobile Phone:</strong>
  <%= @contact.phone_mobile %>
</p>

<p>
  <strong>Email:</strong>
  <%= @contact.email %>
</p>

<%= link_to 'Edit', edit_contact_path(@contact) %> |
<%= link_to 'Back', contacts_path %>

<div class='attached_records'>
  <h2>Interactions</h2>
  <%= link_to(
    'Add new interaction',
    new_interaction_path({contact_id: @contact.id})
  ) %>
  <% @contact.interactions.each do |interaction| %>
    <li><%= link_to interaction.approx_date, interaction %></li>
  <% end %>
</div>
